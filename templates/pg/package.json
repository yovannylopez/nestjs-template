{
  "name": "{{projectName}}",
  "version": "{{projectVersion}}",
  "description": "{{projectDescription}}",
  "author": "{{author}}",
  "license": "{{license}}",
  "scripts": {
    "build": "nest build",
    "coverage": "jest --coverage --verbose --passWithNoTests",
    "debug": "nest start --debug --watch",
    "dev": "nest start --watch",
    "doc": "npx compodoc -p tsconfig.json -s --theme laravel --disableCoverage",
    "docker:debug": "npm-run-all docker:up",
    "docker:down": "docker-compose down",
    "docker:up": "docker-compose up -d",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prebuild": "rimraf app",
    "prepare": "husky install",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "start": "nest start",
    "start:prod": "node app/main",
    "test": "jest --verbose --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch --verbose"
  },
  "dependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.4",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.4",
    "@nestjs/platform-express": "^9.0.4",
    "@nestjs/swagger": "^6.0.4",
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "config": "^3.3.7",
    "dotenv": "^16.0.1",
    "express-http-context": "^1.2.4",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/testing": "^9.0.4",
    "@types/compression": "^1.7.2",
    "@types/jest": "28.1.6",
    "@types/joi": "^17.2.3",
    "@types/node": "^18.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "28.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.3",
    "ts-jest": "28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 16.16.0",
    "npm": ">= 8.11.0"
  },
  "repository": {
    "type": "git",
    "url": "{{repo}}"
  },
  "homepage": "{{repo}}#readme",
  "contributors": [
    "Yovanny LÃ³pez"
  ],
  "keywords": [
    "Microservice",
    "Nest.js",
    "Node.js",
    "Postgres",
    "TypeORM"
  ]
}
